system_accounts="_spampd"
_spampd_homedir="/var/lib/spampd"

do_build() {
	pod2man spampd.pl > spampd.8
}

do_install() {
	vbin spampd.pl spampd
	vdoc changelog.txt
	vman spampd.8
	vsv spampd
}
